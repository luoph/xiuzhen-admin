<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.youai.xiuzhen.game.mapper.PlayMethodsTakePartInMapper">
    <!-- 通用查询映射结果 -->
    <resultMap id="LogPlayerResultMap" type="cn.youai.xiuzhen.game.entity.LogPlayer">
        <id column="id" property="id"/>
        <result column="player_id" property="playerId"/>
        <result column="type" property="type"/>
        <result column="create_date" property="createDate"/>
        <result column="value" property="value"/>
        <result column="param_1" property="param1"/>
    </resultMap>

    <resultMap id="LogAccountResultMap" type="cn.youai.xiuzhen.game.entity.LogAccount">
        <id column="id" property="id"/>
        <result column="player_id" property="playerId"/>
        <result column="create_date" property="createDate"/>
        <result column="value" property="value"/>
    </resultMap>

    <select id="conditionSelectPlayerLog" resultMap="LogPlayerResultMap">
        SELECT
        player_id,
        type,
        create_date,
        value,
        param_1
        FROM `log_player`
        where 1=1
        <if test="type != null">
            and type = #{type}
        </if>
        <if test="createDateBegin != null">
            and create_date &gt;= #{createDateBegin}
        </if>
        <if test="createDateEnd != null">
            and create_date &lt;= #{createDateEnd}
        </if>
        <if test="serverId > 0">
            and server_id = #{serverId}
        </if>
        order by create_date
    </select>

    <select id="selectPlayLoginInfo" resultMap="LogAccountResultMap">
        SELECT `create_date`,`value`,,`player_id`
        FROM `log_account`
        WHERE `type` = 2 AND `value` >= #{grade}
        <if test="serverId > 0">
            AND `server_id` = #{serverId}
        </if>
    </select>
</mapper>
